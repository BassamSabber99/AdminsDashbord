@model IEnumerable<Admins.Models.Employee>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="text-center text-white mt-5 mb-5">Admin مرحبا </h2>


<div class="container col-12 col-sm-12 col-md-8 ">
        <table class=" table table-striped table-dark" id="employee">
            <thead class="thead-dark">
            <tr class="text-center">
                <th>الصورة الشخصية</th>
                <th>الاسم</th>
                <th>الرقم الوظيفي</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr class="text-center">
                    @if (!Model.Any())
                    {
                        <td>لا يوجد موظف بهذه المعلومات</td>
                    }
                    else
                    {
                        <td><img src="~/images/@employee.image" width="50px" height="50px"/></td>
                        <td>@Html.ActionLink(employee.name, "Details", "Admins", new {id = employee.id}, null)</td>
                        <td>@employee.hrCode</td>
                    }

                    
                </tr>
            }
            </tbody>
        </table>
    </div>
   
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#employee").dataTable();
        });
    </script>
}

